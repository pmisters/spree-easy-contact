<% @body_id = 'contact_us' %>
<div id="contact-us">
  <h1><%= t("contacts.contact_us") %></h1>
  <%= hook :contact do %>
  <%= render "shared/error_messages", :target => @contact %>
  <%= form_for(@contact, :html => {:honeypot => true}) do |f| %>
    <%= hook :contact_inside_form do %>
    <div class="field">
       <%= f.label :topic_id, t("contacts.topic") %>
       <%= f.collection_select :topic_id, @topics, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :name, t("contacts.name") %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email, t("contacts.email") %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :order_number, t("contacts.order_number") %> (<%= t("contacts.optionnal") %>)<br />
      <%= f.text_field :order_number %>
    </div>
    <div class="field">
      <%= f.label :message, t("contacts.message") %><br />
      <%= f.text_area :message %>
    </div>
    <div class="action"><%= f.submit t("contacts.send_message"), :class => "button primary" %></div>
    <% end %>
  <% end %>
  <% end %>
</div>